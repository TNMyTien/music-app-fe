@model QLBH.Models.NguoiDung

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />

    <link href="~/theme/admin/css/dangnhap.css" rel="stylesheet" />
    <script src="~/theme/admin/scripts/danhnhap.js"></script>
