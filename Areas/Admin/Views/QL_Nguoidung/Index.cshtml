@model IEnumerable<QLBH.Models.NguoiDung>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


<div class="row genres">
    <div class="col-lg-10 ">
        <div class="title-add">
            <h2>
                Danh sách Người dùng
            </h2>
            <a href="#"><button type="submit" class="btn btn-success">Thêm mới</button></a>
        </div>
        <div class="genre">
            <table id="dtDynamicVerticalScrollExample" class=" table table-hover table table-striped table-bordered table-sm" cellspacing="0">
                <thead>
                    <tr>
                        <th>STT</th>
                        <th>
                            @Html.DisplayNameFor(model => model.Id)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Username)
                        </th>

                        <th class="withHanhDong">Hành động</th>
                    </tr>
                <tbody>
                        @{
                            int i = 0;
                        }
                        @foreach (var item in Model)
                        {
                            i++;
                        <tr>
                            <th>@i</th>
                            <th>
                                    @Html.DisplayFor(modelItem => item.Id)
                            </th>
                            <th>
                                    @Html.DisplayFor(modelItem => item.Username)
                            </th>
                            <th>
                                    @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                                    @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                                    @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
                            </th>
                        </tr>
                        }
                </tbody>
            </table>
        </div>
    </div>

</div>